{
  "name": "vsmon",
  "displayName": "VSMon",
  "description": "An idle collection game in your sidebar",
  "version": "0.1.0",
  "publisher": "PeterNg",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "tsc -p ./",
    "build:webview": "vite build",
    "watch:extension": "tsc -watch -p ./",
    "dev": "npm run build && npm run dev-watch",
    "dev-watch": "npm run watch:extension & vite build --watch",
    "dev-webview": "vite",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsmon.helloWorld",
        "title": "VSMon: Hello World"
      },
      {
        "command": "vsmon.showStatus",
        "title": "VSMon: Show Status"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "vsmon.mainView",
          "name": "VSMon",
          "icon": "$(star-full)"
        }
      ]
    }
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "eslint": "^8.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.3",
    "vite": "^7.3.1",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@preact/signals": "^2.6.1",
    "@tailwindcss/vite": "^4.1.18",
    "littlejsengine": "^1.17.15",
    "preact": "^10.15.1",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.1.18"
  }
}
